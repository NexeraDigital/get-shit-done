{
  "name": "@gsd/autopilot",
  "version": "0.1.0",
  "description": "Autonomous GSD workflow orchestrator",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "gsd-autopilot": "./dist/cli/index.js"
  },
  "files": [
