    "write-file-atomic": "^7.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "pino-pretty": "^13.0.0",
    "typescript": "~5.9.0",
    "vitest": "^4.0.0"
  }
